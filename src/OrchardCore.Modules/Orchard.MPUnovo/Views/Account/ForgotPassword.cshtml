@using Orchard.MPUnovo.Models;
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "忘记密码";
}

<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/localization/messages_zh.js"></script>

<div class="login-bg-wrap">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2">
                <section>
                    <form asp-action="ForgotPassword" method="post" class="form-horizontal" role="form">
                        <h4 class="h4-login"><span class="logo"></span>供应商报价系统</h4>
                        <div class="login-wrap">
                            <h4 style="text-align:center;color:#fff;">请输入邮箱</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-xs-4 col-md-3 control-label">邮箱</label>
                                <div class="col-xs-8 col-md-9">
                                    <input asp-for="Email" class="form-control" data-val-email="请输入正确的邮箱地址" data-val-required="邮箱必填" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="login-btns">
                                <button type="submit" class="btn btn-default">重置密码</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $(document.body).addClass("login-bg");
        $(".login-bg-wrap").height($(window).height());
        $(window).resize(function () {
            $(".login-bg-wrap").height($(window).height());
        })
    })
</script>